{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue"
  ],
  "exclude": [
    "./src/components/index.ts",
    "./src/methods/index.ts"
  ],
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "./examples/*"
      ]
    },
    "declaration": true,
    "declarationDir": "./types",
    "emitDeclarationOnly": true
  },
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
